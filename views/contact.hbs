
<!-- Contact Form -->

 <section class="section contact">
    <form action="/" class="form tile is-6 contains-content has-text-centered" id="contact-form">
        <h1 class="title">Send me an email:</h1>
        <!--Input Fields -->
        <input type="text" placeholder="Full name" class="input" id="name" required>
        <input type="email" placeholder="Email" class="input" id="email" required>
        <input type="text" placeholder="Subject" class="input" id="subject">
        <textarea placeholder="Message..." rows="5" class="textarea" id="message"></textarea>
        <!--Submit Button -->
        <button type="submit" href="/" class="button" value="Submit">Submit</button>
    </form>
    
    <img src="/images/connect.png" alt="Lets talk" class="tile is-4">
 </section>